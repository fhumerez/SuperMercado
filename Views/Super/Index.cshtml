@{
}
<h3>Supermercado
    <div align="right">
        <a class="btn btn-info" asp-controller="Carrito" asp-action="Index">Ver Carrito</a>
    </div>
</h3>
<table class="table" align="center">
    <thead class="thead-dark table">
        <tr>
            <th>Id</th>
            <th>Producto</th>
            <th>Imagen / Compra</th>
            <th>Precio Bs.</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in ViewBag.productos)
        {
            <tr>
                <td>@prod.id</td>
                <td>@prod.nombre</td>
                <td><img src="~/imagenes/@prod.imagen" width="80" height="80"/>
                    <a class="btn btn-success"  asp-controller="Carrito" asp-action="Comprar" asp-route-id="@prod.id">Agregar</a>
                </td>
                <td>@string.Format("{0:0.00}", prod.precio)</td>
                
            </tr>
        }
    </tbody>
</table>